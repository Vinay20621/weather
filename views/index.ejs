<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Weather App</title>
    <link rel="icon" href="images/logo2.png" type="image/x-icon">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
  <body>
    <nav class="navbar bg-dark">
        <div class="container-fluid ms-3">
          <a class="navbar-brand text-white " >
            <img src="/images/logo.png" alt="Logo" width="50" height="35" class="d-inline-block align-text-top">
            Weather App
          </a>
        </div>
      </nav>


    <div class="container">
        <div class="row ">
            <div class="col-md-6 col-10 col-sm-8 mx-auto">
                <form action="/weather/" method="POST" >
       
                    <div class="container text-center  margin  mt-5">
                      <div class="input-group flex-nowrap">
                        
                        <input type="text" name="city"  class="form-control" placeholder="City Name" aria-label="Username" aria-describedby="addon-wrapping">
                      </div>
                      
                      <button type="submit" class="btn btn-primary mt-3">Submit</button>
                      
                      <%if(data.cel){%>
                        <a href="/weather?city=<%= data.city %>" class="btn btn-primary mt-3 ms-4">Fahrenheit</a>
                        <%}%>                       
                            
                            <%if(!data.cel){%>
                        <a href="/weather/cel?city=<%= data.city %>" class="btn btn-primary mt-3 ms-4">Celsius</a>
                              
                            <% }%>

                      <% if(data == "city not found"){ %>
                                  
                        <i class=" mt-3 text-danger"><h2>City Not Found</h2></i>
                  <%  } %> 
                    </form>
            </div>
            
        </div>
    </div>

    <div class="container mt-5 mb-4">
        <div class="row justify-content-center">
            <div class="col-md-7 col-sm-6 col-sm-10 mx-auto text-center">
                <div class="card mx-auto" style="width: 100%;">
                    <%if(!data.cel){%>
                    <div class="card-body">
                       
                        <figure class="image is-50x50">
                            <img src="http://openweathermap.org/img/w/<%=data.icon %>.png" alt="No City Found">
                            <h5 class="card-title"><%= data.city %></h5>
                        </figure>
                      </div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item">Temperature : <%= data.temp%>째 F</li>
                      <li class="list-group-item">Temp Max : <%= data.temp_max%>째 F</li>
                      <li class="list-group-item">Humidity : <%= data.humi%>%</li>
                      <li class="list-group-item">Wind Speed : <%= data.wind%> mph</li>
                      <li class="list-group-item">Pressure : <%= data.pressure%></li>
                      <li class="list-group-item">Sky : <%= data.des %></li>



                    </ul>
                    
                    <%}%>

                    <%if(data.cel){%>
                        <div class="card-body">
                            <figure class="image is-50x50">
                                <img src="http://openweathermap.org/img/w/<%=data.icon %>.png" alt="Image">
                            </figure>
                          <h3 class="card-title"><%= data.city %></h3>
                          </div>
                        <ul class="list-group list-group-flush">
                          <li class="list-group-item">Temperature : <%= data.temp%> 째C</li>
                          <li class="list-group-item">Temp Max : <%= data.temp_max%> 째C</li>
                          <li class="list-group-item">Humidity : <%= data.humi%>%</li>
                          <li class="list-group-item">Wind Speed : <%= data.wind%> kph</li>
                          <li class="list-group-item">Pressure : <%= data.pressure%></li>
                          <li class="list-group-item">Sky : <%= data.des %></li>
    
    
    
                        </ul>

                        <% }%>

                </div>
            </div>
        </div>
    </div>
</div>

<footer class=" footer bg-dark">

    <div class="container text-center text-white cont mt-5">
      <h3><a href="https://github.com/Vinay20621"><i class="bi bi-github text-white"></i></a></h3>
        @Copyright
    </div>
</footer>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>